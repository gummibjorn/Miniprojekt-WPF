<Window x:Class="gadgeothek.UI.Views.DeletionDialogGadget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gadgeothek.UI.Views"
        mc:Ignorable="d"
        Title="DeletionDialogGadget" Height="120.664" Width="262.362">
    <Grid>
        <StackPanel>
            <TextBlock >
                <Run Text="You really want to delete"/>
                <Run Text="{Binding Path=ToDelete.Name}"/>
            </TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button Click="continueDeleteGadget_Click">
                    <TextBlock>Yes</TextBlock>
                </Button>
                <Button Click="cancelDeleteGadget_Click">
                    <TextBlock>No</TextBlock>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
